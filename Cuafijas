    <!-- Chart Scripts -->
    <script>
        // --- CONFIGURACIÓN GENERAL ---
        Chart.defaults.font.family = "'Roboto', sans-serif";
        Chart.defaults.color = '#64748b';
        
        const colors = {
            mina: '#0ea5e9', // Sky 500
            contrata: '#6366f1', // Indigo 500
            costo: '#ef4444', // Red 500
            ingreso: '#10b981', // Emerald 500
            neutral: '#94a3b8' // Slate 400
        };

        // --- 1. BUDGET CHART (Donut) ---
        const ctxBudget = document.getElementById('budgetChart').getContext('2d');
        new Chart(ctxBudget, {
            type: 'doughnut',
            data: {
                labels: ['Inversión Interna (Mina)', 'Pago a Contratista'],
                datasets: [{
                    data: [756778, 327372],
                    backgroundColor: [colors.mina, colors.contrata],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let value = context.raw;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = Math.round((value / total) * 100) + '%';
                                return ` $${value.toLocaleString()} (${percentage})`;
                            }
                        }
                    }
                },
                cutout: '65%'
            }
        });

        // --- 2. HOURLY COST CHART (Horizontal Bar) ---
        const ctxHourly = document.getElementById('hourlyCostChart').getContext('2d');
        new Chart(ctxHourly, {
            type: 'bar',
            data: {
                labels: ['Jumbo 1 Brazo', 'Dumper 5m³', 'Scoop 3.5yd³', 'Operador Equipo', 'Ayudante'],
                datasets: [{
                    label: 'Costo Horario ($)',
                    data: [78.50, 61.07, 55.20, 6.97, 3.67],
                    backgroundColor: [
                        colors.mina, colors.mina, colors.mina, 
                        colors.contrata, colors.contrata
                    ],
                    borderRadius: 4
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: { grid: { display: false } },
                    y: { grid: { display: false } }
                }
            }
        });

        // --- 3. APU BREAKDOWN CHART (Stacked Bar) ---
        const ctxAPU = document.getElementById('apuChart').getContext('2d');
        new Chart(ctxAPU, {
            type: 'bar',
            data: {
                labels: ['Mano de Obra', 'Equipos', 'Materiales', 'GG+Utilidad'],
                datasets: [
                    {
                        label: 'Costo Mina',
                        data: [0, 318.00, 210.50, 0],
                        backgroundColor: colors.mina,
                    },
                    {
                        label: 'Tarifa Contrata',
                        data: [34.12, 40.00, 5.00, 19.78],
                        backgroundColor: colors.contrata,
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { stacked: true, grid: { display: false } },
                    y: { 
                        stacked: true,
                        title: { display: true, text: '$/metro lineal' }
                    }
                },
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        // --- 4. PROFITABILITY WATERFALL (Simulated with Bar) ---
        const ctxProfit = document.getElementById('profitabilityChart').getContext('2d');
        // Data for waterfall: [Base, -Cost1, -Cost2, -Cost3, =Result]
        // Using floating bars structure for Waterfall effect
        new Chart(ctxProfit, {
            type: 'bar',
            data: {
                labels: ['Valor Mineral (NSR)', 'Costo Minado', 'Costo Planta', 'Gastos Grales', 'Amort. Desarr.', 'Margen Neto'],
                datasets: [{
                    label: 'Flujo de Valor',
                    data: [
                        [0, 72.50],        // NSR starts at 0, goes to 72.50
                        [44.50, 72.50],    // Minado subtracts 28 (72.5 - 28 = 44.5)
                        [26.00, 44.50],    // Planta subtracts 18.5 (44.5 - 18.5 = 26)
                        [14.00, 26.00],    // GG subtracts 12 (26 - 12 = 14)
                        [8.60, 14.00],     // Amort subtracts 5.4 (14 - 5.4 = 8.6)
                        [0, 8.60]          // Margin remaining is 8.60
                    ],
                    backgroundColor: [
                        colors.ingreso, // NSR Green
                        colors.costo,   // Costs Red
                        colors.costo,
                        colors.costo,
                        colors.neutral, // Amortization Grey
                        '#f59e0b'       // Margin Amber
                    ],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const raw = context.raw;
                                const value = Math.abs(raw[1] - raw[0]).toFixed(2);
                                return `$${value} /TM`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Valor ($/TM)' }
                    }
                }
            }
        });
    </script>
